{
  "name": "es-sink-cdc",
  "config": {
    "connector.class": "io.confluent.connect.elasticsearch.ElasticsearchSinkConnector",
    "tasks.max": "2",
    "topics": "shop.product.filtered",
    "connection.url": "http://elasticsearch:9200",
    "key.ignore": "false",
    "write.method": "UPSERT",
    "behavior.on.null.values": "DELETE",
    "behavior.on.malformed.documents": "warn",
    "batch.size": "1000",
    "linger.ms": "200",
    "max.in.flight.requests": "5",
    "max.retries": "10",
    "retry.backoff.ms": "500",
    "read.timeout.ms": "30000",
    "connection.timeout.ms": "5000",
    "index.name": "shop-product-000001",
    "topic.index.map": "shop.product.filtered:shop-product-000001",
    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "consumer.override.security.protocol": "SSL",
    "consumer.override.ssl.keystore.location": "/etc/kafka-connect/certs/kafka_connect.key_store.jks",
    "consumer.override.ssl.keystore.password": "kafka_connect_ssl_key_store_password",
    "consumer.override.ssl.key.password": "kafka_connect_ssl_key_password",
    "consumer.override.ssl.keystore.type": "JKS",
    "consumer.override.ssl.truststore.location": "/etc/kafka-connect/certs/kafka_connect.trust_store.jks",
    "consumer.override.ssl.truststore.password": "kafka_connect_ssl_trust_store_password",
    "consumer.override.ssl.truststore.type": "JKS",
    "consumer.override.ssl.endpoint.identification.algorithm": "https",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schema.registry.url": "https://schema-registry:8081",
    "value.converter.schema.registry.ssl.truststore.location": "/etc/kafka-connect/certs/kafka_connect.trust_store.jks",
    "value.converter.schema.registry.ssl.truststore.password": "kafka_connect_ssl_trust_store_password",
    "value.converter.schema.registry.ssl.truststore.type": "JKS",
    "value.converter.schema.registry.ssl.keystore.location": "/etc/kafka-connect/certs/kafka_connect.key_store.jks",
    "value.converter.schema.registry.ssl.keystore.password": "kafka_connect_ssl_key_store_password",
    "value.converter.schema.registry.ssl.key.password": "kafka_connect_ssl_key_password",
    "value.converter.schema.registry.ssl.keystore.type": "JKS",
    "value.converter.schema.registry.ssl.endpoint.identification.algorithm": "https",
    "value.converter.value.subject.name.strategy": "io.confluent.kafka.serializers.subject.RecordNameStrategy"
  }
}